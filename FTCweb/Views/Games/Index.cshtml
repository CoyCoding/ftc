
@model List<FTCweb.Models.Game>

@{
    ViewBag.Title = "Games";
}
<h2>@ViewBag.Title.</h2>
<h3></h3>



<table id="game-table" class="table-dark table table-bordered table-hover dt-responsive bootstrap-table" style="width: 100%">
    <thead style="width: 100%">
        <tr>
            <th>Completed</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Time</th>
            <th>Video</th>
        </tr>
    </thead>
        <tbody>
            <tr>
            </tr>
        </tbody>
</table>


@section scripts{

    <script>
        $(document).ready(function () {
            $("#game-table").DataTable({
                order: [[1, 'asc']],
                ajax: {
                    type: "GET",
                    url: "/api/games",
                    dataSrc: function (json) {
                        var return_data = new Array();
                        for (var i = 1; i < json.length; i++) {
                            return_data.push({
                                'finished': json[i].finished,
                                'title': json[i].title,
                                'genre': json[i].genre,
                                'runtime': json[i].runtime,
                                'videoLink': json[i].videoLink
                            })
                        }
                        return return_data;
                    }
                },
                columns: [
                    {
                        data: "finished"
                        //render: function (data, type, customer) {
                        //    return "<a href='/customers/edit/" + customer.id + "'>" + data + "</a>";
                        //}
                    },
                    {
                        data: "title"
                    },
                    {
                        data: "genre"
                    },
                    {
                        data: "runtime"
                    },
                    {
                        data: "videoLink"
                        //render: function (data, type, customer) {
                        //    return "<div class='text-center'>" +
                        //        "<button data-customer-name='" + customer.name +
                        //        "'data-customer-id='" + data +
                        //        "'class='btn btn-link jq-delete' type='button' >delete</button>" + "</div>"
                        //}
                    }
                ]
            });
        });

    </script>

}

