@model FTCweb.ViewModels.GameListViewModel
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
<style>
   .title{
       text-align: center;
   }
</style>
<style>
    .boxart-offset {
        padding-left: 15vw;
    }
    .half-hero-bar {
        height: 100%;
        background-image: linear-gradient(#00000075,#000000), url(../../Content/img/Controller.jpg);
        background-position: center;
        background-size: cover;
    }
    .slider {
        max-height: 233px;
        padding-top: 3vw
    }
    .wrap-hero {
        height: 50%;
        margin: 0;
        box-sizing: unset;
        padding: 0px;
    }

        .slider-wrap {
        margin: 0px 2vw 2vw 2vw;
        box-shadow: 0px -20px 20vw 16vw rgb(0, 0, 6);
        background-color: black;
    }
</style>
<div class="wrap-hero">
    <div class="title half-hero-bar">
    <h1>FTC.Gaming</h1>
        </div>
</div>

<div></div>
<div class="slider-wrap">
    <div class="slider">

            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>
            <div>@Html.Raw(Model.GetRandomBoxArt())<div class="boxart-offset">@Html.Raw(Model.GetRandomBoxArt())</div></div>




    </div>
</div>
<div class="container body-content">
   



</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.slider').slick({
            infinite: true,
            speed: 300,
            slidesToShow: 4,
            slidesToScroll: 4,
            centerMode: true,

            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 800,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                }
            ]
        });
    });
</script>


